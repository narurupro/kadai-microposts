<div class="row">
  
<div class="col-xs-2">

<%  if current_user.like?(micropost) %>

<%= form_for(current_user.relationship2s.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f|  %>

<%= hidden_field_tag :micropost_id, micropost.id  %>

<%= f.submit "Unlike", class: "btn btn-danger btn-block btn-xs"  %>

<%  end %>

<%  else %>

<%= form_for(current_user.relationship2s.build) do |f|  %>

<%= hidden_field_tag :micropost_id, micropost.id  %>

<%= f.submit "Like", class: "btn btn-primary btn-block btn-xs"  %>

<%  end %>

<%  end %>

</div>

</div>